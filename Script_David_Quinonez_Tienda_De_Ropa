CREATE DATABASE TiendaDeRopaDavidQuinonez;

USE TiendaDeRopaDavidQuinonez;

-- Tabla Categoría de la prenda
CREATE TABLE Categoria(
ID_Categoria INT(10) AUTO_INCREMENT PRIMARY KEY NOT NULL UNIQUE,
Hombre VARCHAR(6) NOT NULL UNIQUE,
Mujer VARCHAR(5) NOT NULL UNIQUE,
niño VARCHAR(4) NOT NULL UNIQUE
);

-- Tabla Talla de la prenda
CREATE TABLE Talla(
ID_Talla INT(10) AUTO_INCREMENT PRIMARY KEY NOT NULL UNIQUE,
XS VARCHAR(5) NOT NULL,
S VARCHAR(5) NOT NULL,
M VARCHAR(5) NOT NULL,
L VARCHAR(5) NOT NULL,
XL VARCHAR(5) NOT NULL
);

-- Tabla Color de la prenda
CREATE TABLE Color(
ID_Color INT(10) AUTO_INCREMENT PRIMARY KEY NOT NULL UNIQUE,
Rojo VARCHAR(4) NOT NULL UNIQUE,
Azul VARCHAR (4) NOT NULL UNIQUE,
Verde VARCHAR (5) NOT NULL UNIQUE,
Amarillo VARCHAR (8) NOT NULL UNIQUE 
);

-- Tabla Proveedores
CREATE TABLE Proveedores(
ID_Proveedores INT(10) AUTO_INCREMENT PRIMARY KEY NOT NULL UNIQUE,
Nombre_Empresa VARCHAR(40) NOT NULL UNIQUE,
RUC INT(11) NOT NULL UNIQUE,
Direccion VARCHAR (100) NOT NULL UNIQUE,
Telefono INT(10) NOT NULL UNIQUE,
Correo_Electronico VARCHAR(100) NOT NULL UNIQUE
);

-- Tabla Prendas
CREATE TABLE Prendas(
ID_Prendas INT(10)AUTO_INCREMENT PRIMARY KEY NOT NULL UNIQUE,
Codigo_Unico INT(10) NOT NULL UNIQUE,
Nombre VARCHAR(40)NOT NULL,
Categoria VARCHAR(7) NOT NULL,
Talla VARCHAR(16) NOT NULL,
Color VARCHAR(10) NOT NULL,
Precio INT(10) NOT NULL,
Stock_Disponible INT(3) NOT NULL,
FOREIGN KEY (ID_Prendas) REFERENCES proveedores(ID_Proveedores),
FOREIGN KEY (ID_Prendas) REFERENCES categoria(ID_Categoria),
FOREIGN KEY (ID_Prendas) REFERENCES Talla(ID_Talla),
FOREIGN KEY (ID_Prendas) REFERENCES Color(ID_Color)
); 

-- Tabla Clientes
CREATE TABLE Clientes(
ID_Clientes INT(10)AUTO_INCREMENT PRIMARY KEY NOT NULL UNIQUE,
DNI INT(10)NOT NULL UNIQUE,
Nombre_Completo VARCHAR(40)NOT NULL UNIQUE,
Direccion VARCHAR(100)NOT NULL,
Telefono INT(10)NOT NULL UNIQUE,
Correo_Electronico VARCHAR(100)NOT NULL UNIQUE,
FOREIGN KEY (ID_Clientes) REFERENCES prendas(categoria)
);

-- Tabla Ventas
CREATE TABLE ventas(
ID_Ventas INT(10) AUTO_INCREMENT PRIMARY KEY NOT NULL UNIQUE,
Numero_Factura INT(10) NOT NULL UNIQUE,
Fecha TIMESTAMP NOT NULL unique,
Productos_Vendidos VARCHAR(40)NOT NULL,
Monto_Total INT(10) NOT NULL,
Metodo_Pago VARCHAR (30) NOT NULL,
FOREIGN KEY (ID_Ventas) REFERENCES Clientes(ID_Clientes),
FOREIGN KEY (ID_Ventas) REFERENCES Prendas(ID_Prendas)
);

DESCRIBE Prendas;
DESCRIBE clientes;
DESCRIBE proveedores;
DESCRIBE ventas;
